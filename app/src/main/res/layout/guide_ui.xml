<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
            android:id="@+id/guideViewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
    <Button
            android:text="开始体验"
            android:onClick="click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideBt"
            android:textColor="@color/btn_guide_textcolor"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="@drawable/btn_guide_selector"
            android:layout_centerHorizontal="true" android:layout_marginBottom="60dp"/>

</RelativeLayout>